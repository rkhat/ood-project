<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity"
  prefHeight="200.0" prefWidth="300.0" spacing="30.0"
  stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/8.0.171"
  xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SignupController">
  <children>
    <JFXTextField fx:id="usernameField" promptText="Username" />
    <JFXPasswordField fx:id="passwordField1"
      promptText="Password" />
    <JFXPasswordField fx:id="passwordField2"
      promptText="Confirm Password" />
    <JFXButton fx:id="signupButton" onAction="#clickSignup"
      text="Signup" />
  </children>
  <padding>
    <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
  </padding>
</VBox>
